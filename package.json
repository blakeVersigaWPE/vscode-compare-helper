{
	"name": "compare-helper",
	"displayName": "Compare Helper",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:compare-helper.compareFromExplorer",
		"onCommand:compare-helper.compareFromExplorerUseDefaultTool",
		"onCommand:compare-helper.dumpConfiguration"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "compare-helper.compareFromExplorer",
				"title": "Compare (Externally)..."
			},
			{
				"command": "compare-helper.compareFromExplorerUseDefaultTool",
				"title": "Compare (Externally)"
			},
			{
				"command": "compare-helper.dumpConfiguration",
				"title": "Dump Configuration to Output"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "compare-helper.compareFromExplorer",
					"when": "false"
				},
				{
					"command": "compare-helper.compareFromExplorerUseDefaultTool",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"command": "compare-helper.compareFromExplorerUseDefaultTool",
					"alt": "compare-helper.compareFromExplorer",
					"group": "3_compare@9999",
					"when": "listMultiSelection && !explorerResourceIsRoot && sideBarFocus && activeViewlet == 'workbench.view.explorer'"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Compare Helper",
			"properties": {
				"compareHelper.defaultExternalTools": {
					"type": "object",
					"markdownDescription": "Use value of the `name` property. See `#compareHelper.externalTools#`",
					"scope": "application",
					"properties": {
						"folders": {
							"type": "string"
						},
						"images": {
							"type": "string"
						},
						"text": {
							"type": "string"
						}
					},
					"default": {
						"folders": "",
						"images": "",
						"text": ""
					},
					"additionalProperties": false
				},
				"compareHelper.externalTools": {
					"type":"array",
					"description": "A list of available external tools and their configurations",
					"scope": "application",
					"items": {
						"type": "object",
						"properties": {
							"name": { "type": "string" },
							"path": { "type": "string" },
							"args": { 
								"type": "array",
								"items": { "type": "string" }
							},
							"compares": {
								"type": "array",
								"uniqueItems": true,
								"maxItems": 3,
								"items": {
									"type": "string",
									"enum": ["folders", "images", "text"]
								}
							}
						},
						"required": ["name", "path", "args", "compares"],
						"additionalProperties": false
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
